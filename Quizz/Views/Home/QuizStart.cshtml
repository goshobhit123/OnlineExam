@model Quizz.Models.TBL_QUESTIONS

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QuizStart</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <style>
        body {
            background-image: radial-gradient(#ff6a00,#b6ff00);
            background-size: cover;
        }
    </style>



    @using (Html.BeginForm("QuizStart", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    

        <div class="row">
            <div class="container" style="margin:0 auto;margin-top:100px;font-family:Arial 'Arial Rounded MT'">
                <div class="row">
                    <h1 style="font-family:Arial,Arial, Helvetica, sans-serif,sans-serif">Q @TempData["ques"])</h1><h1 style="font-family:Arial,Arial, Helvetica, sans-serif,sans-serif"> @Html.DisplayFor(x => x.Q_TEXT)</h1>
                </div>
                <div class="row">
                <h3 style="font-family:Arial,Arial, Helvetica, sans-serif,sans-serif">Difficulty Level:- @Html.DisplayFor(x => x.Q_level)</h3>
            </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.OPA, Model.QUESTION_ID) @Model.OPA</h3>
                </div>

                <div class="row" >
                    <h3>@Html.RadioButtonFor(x => x.OPB, Model.QUESTION_ID) @Model.OPB</h3>
                </div>

                <div class="row" >
                    <h3>@Html.RadioButtonFor(x => x.OPC, Model.QUESTION_ID) @Model.OPC</h3>
                </div>

                <div class="row">
                    <h3>@Html.RadioButtonFor(x => x.OPD, Model.QUESTION_ID) @Model.OPD</h3>
                </div>

                


                <div class="row">
                    <input type="submit" value="submit" class="btn btn-success" />
                </div>




            </div>





        </div>
    



    }

   
</body>
</html>
